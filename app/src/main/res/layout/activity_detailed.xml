<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/music_3"
    tools:context=".DetailedActivity">

    <Button
        android:id="@+id/btn_show_songs"
        android:layout_width="354dp"
        android:layout_height="55dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="492dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="184dp"
        android:text="Display the list"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/returnbtn"
        android:layout_width="353dp"
        android:layout_height="50dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="643dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="38dp"
        android:text="Return to main screen"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_avg"
        android:layout_width="352dp"
        android:layout_height="56dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="565dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="110dp"
        android:text="Calculate & display average rating"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/playlist_text"
        android:layout_width="366dp"
        android:layout_height="449dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="253dp"
        android:fontFamily="sans-serif-medium"
        android:text="Display PlayList"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>